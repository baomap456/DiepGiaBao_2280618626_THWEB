@model IEnumerable<THLapTrinhWeb.Models.Product>

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-primary mb-4">Danh sách sản phẩm</h2>

        <table class="table table-hover table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Tên</th>
                    <th>Giá</th>
                    <th>Mô tả</th>
                    <th style="width: 180px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.Description</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="Display" asp-route-id="@product.Id"
                                    class="btn btn-sm btn-info text-white">Xem</a>
                                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Xóa</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-action="Add" class="btn btn-success mt-3">+ Thêm sản phẩm</a>
    </div>
</div>
